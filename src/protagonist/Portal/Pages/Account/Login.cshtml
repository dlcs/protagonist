@page
@model LoginModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>DLCS: Digital Library Cloud Services, from Digirati</title>
    
    <link href="~/assets/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/portal.css" rel="stylesheet" />
  </head>
  <body>
    
<main>

<div class="container py-3">
  @await Html.PartialAsync("Shared/_GeneralSiteHeader")
  
  <div class="row">
      <div class="col-md-3">
          <form method="post">
              <div asp-validation-summary="All" class="text-danger"></div>
              <div class="form-group">
                  <label asp-for="Input.Email"></label>
                  <input asp-for="Input.Email" class="form-control">
                  <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <label asp-for="Input.Password"></label>
                  <input asp-for="Input.Password" class="form-control">
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <button type="submit" class="btn btn-primary">Log in</button>
              </div>
          </form>
      </div>
  </div>
  
  <p><a href="mailto:contact@digirati.com">contact@digirati.com</a></p>
  
  @await Html.PartialAsync("Shared/_GeneralSiteFooter")
</div>
</main>


  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="~/assets/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/portal.js" asp-append-version="true"></script>

      
  </body>
</html>